{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* Module Resolution */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* React / Next */
    "jsx": "react-jsx",
    "plugins": [
      { "name": "next" }
    ],

    /* Strictness */
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "allowJs": true,

    /* Performance */
    "incremental": true,

    /* Path Aliases (CRITICAL FIX) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/app/*": ["app/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "supabase/functions"
  ]
}